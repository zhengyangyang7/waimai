<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.veliona.elemebackend.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.veliona.elemebackend.entity.User">
        <id column="userID" property="userID" />
        <result column="userAccount" property="userAccount" />
        <result column="userPassword" property="userPassword" />
        <result column="userName" property="userName" />
        <result column="userAvatar" property="userAvatar" />
        <result column="userStatus" property="userStatus" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        userID, userAccount, userPassword, userName, userAvatar, userStatus
    </sql>
    <select id="searchByUserAccount" resultType="com.veliona.elemebackend.entity.User">
        SELECT *
        FROM users
        WHERE userAccount = #{userAccount}
    </select>

</mapper>
